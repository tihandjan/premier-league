
    <div class="row">
        <div class="right-block col-md-9">
        <h1 class="index-article-h1">Привет я h1 для тега <%= @h1 %></h1>
        <div class="list-group">
            <% @articles.each do |article| %>
                <a href="<%= league_article_path(article.league, article) %>" class="list-group-item clearfix">
                    <%= image_tag(article.picture.url(:mini), alt: '', class: 'img-responsive') %>
                    <span class="time"><i><%= Russian::strftime(article.created_at, "%d %B %Y") %></i></span>
                    <h3 class="list-group-item-heading"><%= article.title %></h4>
                    <p class="list-group-item-text"><%= article.summary %></p>
                </a>
            <% end %>
            <%= will_paginate @articles, page_links: true %>
        </div>
        </div>
        <div class="left-block col-md-3"><%= render 'shared/last_news', point: 0 %></div>
    </div>

