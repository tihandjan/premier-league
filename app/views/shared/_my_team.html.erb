<div class="panel panel-default row-onlain"> 
    <div class="panel-heading"> 
        <h3 class="panel-title text-left">Моя команда</h3> 
    </div> 
    <div class="panel-body my-team" id="my-team">
        
        <% if user_signed_in? %>
            <%= form_for current_user, url: change_my_team_path, method: :put, remote: true, id: "my-team-form" do |f| %>
                <div class="form-group text-center">
                  <%= f.label :team, "Новости вашего клуба" %>
                  <div class="countries">
                      <select class="selectpicker" id="country" onchange="changeCountry();">
                          <option value="england" data-icon="select-box-sprite sprite_header sprite-england_another">Выбрать лигу</option>
                          <option value="england" data-icon="select-box-sprite sprite_header sprite-england_another">Англия</option>
                          <option value="spain" data-icon="select-box-sprite sprite_header sprite-spain">Испания</option>
                          <option value="germany" data-icon="select-box-sprite sprite_header sprite-germany">Германия</option>
                          <option value="italy" data-icon="select-box-sprite sprite_header sprite-italy">Италия</option>
                      </select>
                  </div>
                  <div class="countries" id="england">
                      <%= f.select :team, options_for_select(select_apl_teams), {:include_blank => change_blank(current_user)}, {:onchange=>"$('.hidden-team-field').val($(this).val());$(this.form).submit();", class: "selectpicker", "data-live-search"=>"true"} %>
                  </div> 
                  <div class="countries" id="spain">
                      <%= f.select :team, options_for_select(select_laliga_teams), {:include_blank => change_blank(current_user)}, {:onchange=>"$('.hidden-team-field').val($(this).val());$(this.form).submit();", class: "selectpicker", "data-live-search"=>"true"} %>
                  </div>
                  <div class="countries" id="italy">
                      <%= f.select :team, options_for_select(select_seria_teams), {:include_blank => change_blank(current_user)}, {:onchange=>"$('.hidden-team-field').val($(this).val());$(this.form).submit();", class: "selectpicker", "data-live-search"=>"true"} %>
                  </div>
                  <div class="countries" id="germany">
                      <%= f.select :team, options_for_select(select_bundesliga_teams), {:include_blank => change_blank(current_user)}, {:onchange=>"$('.hidden-team-field').val($(this).val());$(this.form).submit();", class: "selectpicker", "data-live-search"=>"true"} %>
                      <%= f.hidden_field :team, class: "hidden-team-field" %>
                  </div>

                </div>
            <% end %>
         
            <div id="my-team-content"><%= render 'main/my_team_content' %></div>
        <% else %>
            <div class="text-center">Войти с помощью</div>
            <div class="btn-group btn-group-justified" role="group" aria-label="...">
                <div class="btn-group" role="group">
                  <a href="<%= user_facebook_omniauth_authorize_path %>" class="btn btn-primary btn-reg"><i class="fa fa-facebook" aria-hidden="true"></i>Facebook</a>
                </div>
                <div class="btn-group" role="group">
                  <a href="<%= user_google_oauth2_omniauth_authorize_path %>" class="btn btn-danger btn-reg"><i class="fa fa-google-plus" aria-hidden="true"></i>Google</a>
                </div>
                
            </div>
            <div class="text-center">Или</div>
            <div class="btn-group btn-group-justified" role="group" aria-label="...">
                <div class="btn-group" role="group">
                  <a href="<%= new_user_session_path %>" class="btn btn-info btn-reg">Вручную</a>
                </div>
            </div>
        <% end %>
    </div> 
</div>

<script type="text/javascript">
    $('.selectpicker').selectpicker({
        size: 10
     });
      
     (function(){
         $('.countries').hide();
         var country = $('#country').val();
         $('#' + country).show();
         
         
     })();
     
     function changeCountry(){
         $('.countries').hide();
         var country = $('#country').val();
         $('#' + country).show();
     }
     
     
</script>