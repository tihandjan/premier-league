<div class="panel panel-default row-onlain"> 
    <div class="panel-heading"> 
        <h3 class="panel-title text-left">Моя команда<i class="hide-show" onclick="$('#my-team').stop().slideToggle('slow');">Скрыть</i></h3> 
    </div> 
    <div class="panel-body my-team" id="my-team">
        
        <% if user_signed_in? %>
            <%= form_for current_user, url: change_my_team_path, method: :put, remote: true do |f| %>
                <div class="form-group text-center">
                  <%= f.label :team, "Новости вашего клуба" %>
                  <%= f.select :team, options_for_select(select_team), {:include_blank => change_blank(current_user)}, {:onchange=>"$(this.form).submit();", class: "selectpicker", "data-live-search"=>"true"} %>
                </div>
            <% end %>
         
            <div id="my-team-content"><%= render 'main/my_team_content' %></div>
        <% else %>
            <div class="text-center">Войти с помощью</div>
            <div class="btn-group btn-group-justified" role="group" aria-label="...">
                <div class="btn-group" role="group">
                  <a href="<%= user_facebook_omniauth_authorize_path %>" class="btn btn-primary btn-reg"><i class="fa fa-facebook" aria-hidden="true"></i>Facebook</a>
                </div>
                <div class="btn-group" role="group">
                  <a href="<%= user_google_oauth2_omniauth_authorize_path %>" class="btn btn-danger btn-reg"><i class="fa fa-google-plus" aria-hidden="true"></i>Google</a>
                </div>
                
            </div>
            <div class="text-center">Или</div>
            <div class="btn-group btn-group-justified" role="group" aria-label="...">
                <div class="btn-group" role="group">
                  <a href="<%= new_user_session_path %>" class="btn btn-info btn-reg">Вручную</a>
                </div>
            </div>
        <% end %>
    </div> 
</div>

<script type="text/javascript">
    $('.selectpicker').selectpicker({
        size: 10
     });
      
</script>