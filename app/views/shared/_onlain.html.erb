<div class="row-onlain center-block">
    
    <div class="panel panel-default"> 
        <div class="panel-heading"> 
            <h3 class="panel-title text-left">Матчи недели</h3> 
        </div> 
        <div class="panel-body">
                <div class="table">
                    <table class="table">
                            <tr>
                                <td></td>
                                <td></td>
                                <td><i>Сегодня</i></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        <% @response['fixtures'].each do |team| %>
                            <% if team['date'].to_time.strftime('%d %b %Y') == (Time.now.to_time+3.hour).strftime('%d %b %Y') %>
                            <tr class='clickable-row a-onlain' data-href='<%= root_path %>'>
                                <td><%= team_translater(team['homeTeamName']) %></td>
                                <td><i class="<%= show_team_icon(team['homeTeamName']) %> icon-small"></i></td>
                                <td class="time"><div style="background:<%= in_play_or_finished(team['status']) %>" class="score_or_time"><%= time_or_result team['status'], team['result']['goalsHomeTeam'], team['result']['goalsAwayTeam'], (team['date'].to_time+3.hour).strftime('%H:%M')  %></div></td> <!--('%a %b %d %H:%M:%S %Z %Y')-->
                                <td><i class="<%= show_team_icon(team['awayTeamName']) %> icon-small"></i></td>
                                <td><%= team_translater(team['awayTeamName']) %></td>
                                
                            </tr>
                            <% end %>
                        <% end %>
                            <tr>
                                <td></td>
                                <td></td>
                                <td><i>Завтра</i></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        <% @response['fixtures'].each do |team| %>
                            <% if (Time.now.to_time-1.day+3.hour).strftime('%d %b %Y')  == (team['date'].to_time).strftime('%d %b %Y') %>
                            <tr class='clickable-row a-onlain' data-href='<%= root_path %>'>
                                <td><%= team_translater(team['homeTeamName']) %></td>
                                <td><i class="<%= show_team_icon(team['homeTeamName']) %> icon-small"></i></td>
                                <td class="time"><div style="background:<%= in_play_or_finished(team['status']) %>" class="score_or_time"><%= time_or_result team['status'], team['result']['goalsHomeTeam'], team['result']['goalsAwayTeam'], (team['date'].to_time+3.hour).strftime('%H:%M')  %></div></td> <!--('%a %b %d %H:%M:%S %Z %Y')-->
                                <td><i class="<%= show_team_icon(team['awayTeamName']) %> icon-small"></i></td>
                                <td><%= team_translater(team['awayTeamName']) %></td>
                                
                            </tr>
                            <% end %>
                        <% end %>
                        
                        <tr>
                            <td></td>
                            <td></td>
                            <td><i>Все</i></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </table>
                </div>
            
        </div>
    </div>
    
        
</div>
       