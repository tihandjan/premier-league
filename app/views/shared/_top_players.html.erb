<!--top players-->
    <div class="row hidden-xs">
        <% 3.times do %>
        <div class="col-sm-4 col-xs-12 col-article">
            <div class="panel panel-default">
              <!-- Default panel contents -->
              <div class="panel-heading">Бомбардиры</div>
              <div class="panel-body panel-body-custom">
                <img src="images/top-players.jpg" class="img-responsive" width="100%"  />
                <div class="number-one">
                    <p class="first">1</p>
                    <p class="footballer-name">Cristiano </br>Ronaldo</p>
                    <p class="boals">3</p>
                </div>
              </div>
            
              <!-- Table -->
              <table class="table table-hover">
                <% @place = 1 %>
                  <tr>
                      <td><%= @place += 1 %> Ronaldo</td>
                      <td></td>
                      <td class="team-score text-center">1</td>
                  </tr>
              </table>
            </div>
        </div>
        <% end %>
    </div>