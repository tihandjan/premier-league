<% provide(:title, @article.title) %>


<div class="row">

    <div class="right-block col-md-9">
        <div class="article-title"><a href="#"> Новости</a></div>
        <div class="show-article-wrapper">
            <h1 class="show-article-title"><%= @article.title %></h1>
            <span class="show-article-time"><i class="glyphicon glyphicon-time"></i><i><%= Russian::strftime(@article.created_at, "%d %B %Y") %></i></span>
            <div class="show-article-image">
                <!-- social-media start -->
                <div class="share-buttons">
                    <a class="social-btn" href="#"><i class="fa fa-facebook " aria-hidden="true"></i></a>
                    <a class="social-btn vk-btn" href="#"><i class="fa fa-vk" aria-hidden="true"></i></a>
                    <a class="social-btn" href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                    <a class="social-btn pocket-btn" href="#"><i class="fa fa-get-pocket" aria-hidden="true"></i></a>
                </div>
                <!-- social-media end -->
                <%= image_tag @article.picture, alt: '', class: 'img-responsive' %>
            </div>
            <h2 class="show-article-summary"><%= @article.summary %></h2>
            <p class="show-article-description"><%= @article.description %></p>
            <% @article.pictures.each do |subarticle| %>
                <div class="show-article-image">
                    <%= image_tag subarticle.picture, class: 'img-responsive' %>
                </div>
                <div class="show-article-description">
                    <p><%= raw simple_format(subarticle.description) %></p>
                </div>
            <% end %>
            <span class="article-source">Источник: <a href="<%= @article.source %>" target="_blank"><%= (@article.source).slice!(7, 14) %></a></span>
            <!-- social-media start -->
            <div class="share-buttons-bottom">
                <a class="social-btn" href="#"><i class="fa fa-facebook " aria-hidden="true"></i></a>
                <a class="social-btn vk-btn" href="#"><i class="fa fa-vk" aria-hidden="true"></i></a>
                <a class="social-btn" href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                <a class="social-btn pocket-btn" href="#"><i class="fa fa-get-pocket" aria-hidden="true"></i></a>
            </div>
            <!-- social-media end -->
            <div class="show-article-tegs">
                <a href="#" class="teg">Ибрагимович</a>
                <a href="#" class="teg">Манчестер Юнайтед</a>
                <a href="#" class="teg">Гвардиола</a>
            </div>
            <span class="show-read-more">Читайте также</span>
            <hr>

            <!-- read more articles start -->
            <div class="row row-line-two">
                
                    <!--copy start-->
                <% if @news %>
                    <% @news.first(3).each do |article| %>
                        <div class="col-sm-4 three-article">
                            <a class="a-article" href="<%= article_path(article) %>">
                                <div class="thumbnail">
                                    <div class="image-wrapper"><%= image_tag(article.picture.url(:mini), :alt => 'football') %></div>
                                    <div class="caption custom-caption">
                                        <h3><strong><%= truncate(article.title, length: 55) %></strong></h3>
                                        <p><%= truncate(article.summary,length: 90) %></p>
                                        <span class="article-time"><i class="glyphicon glyphicon-time"></i><i><%= Russian::strftime(article.created_at, "%d %B %Y") %></i></span> 
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% end %>
                <% end %>
                <!--end-->
                
            </div>
            <!-- read more articles start -->

        </div>
    </div>

    <div class="left-block col-md-3"><%= render 'shared/last_news' %></div>
</div>






