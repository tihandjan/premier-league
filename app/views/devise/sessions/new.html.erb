
<div style="margin-top: 70px;margin-bottom: 70px;" class="col-md-6 col-md-offset-3 custom-form">
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="form-group">
      <%= f.label "Почта" %><br />
      <%= f.email_field :email, class: "form-control", :required => true, autofocus: true %>
    </div>
  
    <div class="form-group">
      <%= f.label "Пароль" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> символов минимум)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control", :required => true, minlength: 6 %>
    </div>
  
    <div class="actions">
      <%= f.submit "Войти", class: "btn btn-primary" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>