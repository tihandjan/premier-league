

<div class="col-md-6 col-md-offset-3 custom-form">
  <div class="text-center registration"><span>Войти с помощью</span></div>
  <div class="btn-group btn-group-justified" role="group" aria-label="...">
    <div class="btn-group" role="group">
      <a href="<%= user_facebook_omniauth_authorize_path %>" class="btn btn-lg btn-primary"><i class="fa fa-facebook" aria-hidden="true"></i>Facebook</a>
    </div>
    <div class="btn-group" role="group">
      <a href="<%= user_google_oauth2_omniauth_authorize_path %>" class="btn btn-lg btn-danger"><i class="fa fa-google-plus" aria-hidden="true"></i>Google</a>
    </div>
  </div>
  <hr/>
  <div class="text-center registration"><span>или</span></div>
  
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="form-group">
      <%= f.label "Почта" %><br />
      <%= f.email_field :email, class: "form-control", :required => true, autofocus: true %>
    </div>
  
    <div class="form-group">
      <%= f.label "Пароль" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> символов минимум)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control", :required => true, minlength: 6 %>
    </div>
  
    <div class="actions">
      <%= f.submit "Войти", class: "btn btn-primary" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>