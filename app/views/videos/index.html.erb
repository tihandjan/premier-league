<% provide(:title, 'Смотреть записи матчей английской премьер лиги в повторе, видео повторы голов, футбольные ток-шоу') %>
<% provide(:editional_class, 'articles') %>

<div class="row index-article-row">
    <div class="right-block col-md-9">
        <div class="index-article-wrapper clearfix">
            <div class="col-sm-4"><h2><a href="<%= videos_path %>"><span class="first">
                <i class="fa fa-newspaper-o" aria-hidden="true"></i>
            </span><span class="second">Все видео</span></a></h2></div>
            <div class="col-sm-4"><h2><a href="#"><span class="first">
                <i class="sprite_header sprite-apl"></i>
            </span><span class="second">Англия</span></a></h2></div>
            <div class="col-sm-4"><h2><a href="#"><span class="first">
                <i class="sprite_header sprite-laliga"></i>
            </span><span class="second">Испания</span></a></h2></div>
            <div class="col-sm-4"><h2><a href="#"><span class="first">
                <i class="sprite_header sprite-seria_a"></i>
            </span><span class="second">Италия</span></a></h2></div>
            <div class="col-sm-4"><h2><a href="#"><span class="first">
                <i class="sprite_header sprite-bundesliga"></i>
            </span><span class="second">Германия</span></a></h2></div>
            <div class="col-sm-4"><h2><a href="#"><span class="first">
                <i class="sprite_header sprite-lc"></i>
            </span><span class="second">Лига Чемп<span class="span-to-hide">ионов</span></span></a></h2></div>
        </div>

        
            
            
        <div class="row row-line-two">
            <h1 class="index-article-h1">Футбол видео</h1>
            <hr>
                <!--copy start-->
            <% if @videos %>
                <% @videos.each do |video| %>
                    <div class="col-sm-3 three-article">
                        <a class="a-article" href="<%= video_path(video) %>">
                            <div class="thumbnail">
                                <div class="image-wrapper"><%= image_tag(video.picture.url(:mini), :alt => 'football', class: 'img-responsive') %></div>
                                <div class="caption custom-caption">
                                    <h3 class="video-three-article-title"><strong><%= truncate(video.title, length: 55) %></strong></h3>
                                    <span class="article-time"><i class="glyphicon glyphicon-time"></i><i><%= Russian::strftime(video.created_at, "%d %B %Y") %></i></span> 
                                    <span class="video-icon-four"><i class="glyphicon glyphicon-play"></i></span>
                                    <span class="video-icon-four video-icon-four-time">00:29</span>
                                </div>
                            </div>
                        </a>
                    </div>
                <% end %>
            <% end %>
            <!--end-->
        </div>
        <div class="text-center paginate-block"><%= will_paginate @videos, page_links: true %></div>

    </div>
    <div class="left-block col-md-3"><%= render 'shared/last_news' %></div>
</div>