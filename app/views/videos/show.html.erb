<% provide(:title, @video.title) %>
<% provide(:editional_class, 'articles') %>

<div class="row">

    <div class="right-block col-md-9">
        <div class="article-title"><a href="<%= videos_path %>">Видео</a></div>
        <div class="show-article-wrapper">
            <h1 class="show-article-title"><%= @video.title %></h1>
            <span class="show-article-time"><i class="glyphicon glyphicon-time"></i><i><%= Russian::strftime(@video.created_at, "%d %B %Y") %></i></span>
            <div class="show-article-image">
                <!-- social-media start -->
                <div class="share-buttons">
                    <a class="social-btn fb" href="#"><i class="fa fa-facebook " aria-hidden="true"></i></a>
                    <a class="social-btn vk vk-btn" href="#"><i class="fa fa-vk" aria-hidden="true"></i></a>
                    <a class="social-btn tw" href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                    <a class="social-btn pocket pocket-btn" href="#"><i class="fa fa-get-pocket" aria-hidden="true"></i></a>
                </div>
                <!-- social-media end -->
                <%= raw @video.code %>
            </div>
            <p class="show-article-description"></p>
            
            <div class="show-article-tegs">
                <a href="#" class="teg">Ибрагимович</a>
                <a href="#" class="teg">Манчестер Юнайтед</a>
                <a href="#" class="teg">Гвардиола</a>
            </div>
            <span class="show-read-more">Смотрите также</span>
            <hr>

            <!-- read more articles start -->
            <div class="row row-line-two">
                
                    <!--copy start-->
                <% if @videos %>
                    <% @videos.each do |video| %>
                        <div class="col-sm-3 three-article">
                            <a class="a-article" href="<%= video_path(video) %>">
                                <div class="thumbnail">
                                    <div class="image-wrapper"><%= image_tag(video.picture.url(:mini), :alt => 'football') %></div>
                                    <div class="caption custom-caption">
                                        <h3 class="video-three-article-title"><strong><%= truncate(video.title, length: 55) %></strong></h3>
                                        <span class="article-time"><i class="glyphicon glyphicon-time"></i><i><%= Russian::strftime(video.created_at, "%d %B %Y") %></i></span> 
                                        <span class="video-icon-four"><i class="glyphicon glyphicon-play"></i></span>
                                        <span class="video-icon-four video-icon-four-time">00:29</span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% end %>
                <% end %>
                <!--end-->
                
            </div>
            <!-- read more articles end -->

        </div>
    </div>

    <div class="left-block col-md-3"><%= render 'shared/last_news', point: 0 %></div>
</div>




